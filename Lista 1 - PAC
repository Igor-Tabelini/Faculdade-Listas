/*Número 1*/

int soma(int a, int b)
{
	r = a + b;

	printf("O valor da soma é: %d", r);

	return r;
}

/*Número 2*/

int media_artimetica(int a, int b)
{
	int media;

	media = (a + b)/2;

	return media;
}

/*Número 3*/

float novo_preço(float a)
{
	int np;

	np = a * 1,2;

	return np;
}

/*Número 4/

void calculaValor(float a, float b)
{
    float valorPago;
    
    valorPago = a * b;
    
    printf("O valor pago é %.2f", valorPago);
}

/*Número 5*/

/* a = hora; b = minutos*/

int tempo(int a, int b)
{
    int horariom;
    
    horariom = (a * 60) + b;
    
    return horariom;
}
/* a = hora de chegada; b = minuto de chegada; c = hora de saida; d = hora de chegada*/

int tempovoo(int a, int b, int c, int d)
{
    int horarioInicial, horarioFinal, dhorario;
    
    horarioInicial = tempo(a, b);
    
    horarioFinal = tempo(c, d);
    
    dhorario = horarioFinal - horarioInicial;
    
    return dhorario;
}

/*Número 6*/

/* a = dias decorridos*/

void tempo(int a)
{
    int semanas, dias;
    
    semanas = a / 7;
    
    dias = a % 7;
    
    printf("%d semanas e %d dias", semanas, dias);
}

/*Número 7*/

/* a = dias decorridos*/

void numeroCedulas(int a)
{
    int ncedulas, i, novoValor;
    
    i = 0;
    
    novoValor = a;
    
    if (novoValor >= 100 )
    {
        ncedulas = a / 100;
        
        i += ncedulas;
        
        novoValor = a - ncedulas * 100;
    }
    if (novoValor >= 50)
    {
        ncedulas = novoValor / 50;
        
        i += ncedulas;
        
        novoValor = novoValor - ncedulas * 50;
    }
    if (novoValor >= 20)
    {
        ncedulas = novoValor / 20;
        
        i += ncedulas;
        
        novoValor = novoValor - ncedulas * 20;
    }
    if (novoValor >= 10)
    {
        ncedulas = novoValor / 10;
        
        i += ncedulas;
        
        novoValor = novoValor - ncedulas * 10;
    }
    if (novoValor >= 5)
    {
        ncedulas = novoValor / 5;
        
        i += ncedulas;
        
        novoValor = novoValor - ncedulas * 5;
    }
    if (novoValor >= 2)
    {
        ncedulas = novoValor / 2;
        
        i += ncedulas;
        
        novoValor = novoValor - ncedulas * 2;
    }
    if (novoValor >= 1)
    {
        ncedulas = novoValor / 1;
        
        i += ncedulas;
        
        novoValor = novoValor - ncedulas * 1;
    }
    
    printf("Nº de células: %d cédulas", i);
}

