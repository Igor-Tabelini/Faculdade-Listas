/* 1 */

#include <stdio.h>
#define SIZE 5

int produto(int a[], int qt)
{
    int resultado = 1;
    
    for(int i = 0; i < qt; i++)
    {
        resultado *= a[i];
    }
    
    return resultado;
}

int main()
{
    int valores[SIZE] = {2, 5, 8, 11, 14};
    
    printf("%d", produto(valores, 5));
    
    return 0;
}

/* 2 */

#include <stdio.h>
#define SIZE 5

void parouimpar(int a[], int qt, int *impar, int *par)
{
    int resto = 0;
    
    for(int i = 0; i < qt; i++)
    {
        resto = a[i] % 2;
        
        if(resto == 0)
        {
            (*par) += 1;
        }
        else
        {
            (*impar) += 1;
        }
    }
}

int main()
{
    int valores[SIZE] = {2, 5, 8, 11, 14}, impar = 0, par = 0;
    
    parouimpar(valores, 5, &impar, &par);
    
    printf("Quantidade de Impares: %d\nQuantidade de Pares: %d\n", impar, par);
    
    return 0;
}

/* 3 */

#include <stdio.h>
#define SIZE 5

int maiorMedia(float a[], int qt, float media)
{
    int cont = 0;
    
    for(int i = 0; i < qt; i++)
    {
        if(a[i] >= media)
        {
            cont += 1;
        }
    }
    
    return cont;
}

int main()
{
    float valores[SIZE] = {2.8, 5.3, 8.7, 11.4, 14.1}, media, soma = 0;
    
    for(int i = 0; i < SIZE; i++)
    {
        soma += valores[i];
    }
    
    media = soma / SIZE;
    
    printf("Valor da Média: %.2f\n", media);
    
    printf("Quantidade de Números Acima da Média: %d", maiorMedia(valores, 5, media));
    
    return 0;
}

/* 4 */

#include <stdio.h>
#define SIZE 7

int compara(float a[], int qt)
{
    int cont = 0;
    
    for(int i = 0; i < qt - 1; i++)
    {
        if(a[i] <= a[qt - 1])
        {
            cont += 1;
        }
    }
    
    return cont;
}

int main()
{
    float a[SIZE] = {0};
    
    for(int i = 0; i < SIZE; i++)
    {
        printf("Coloque o valor de a[%d]: ", i);
        scanf("%f", &a[i]);
    }
    
    printf("A quantidade de números menores que a[6]: %d", compara(a, SIZE));
    
    return 0;
}

/* 5 */

#include <stdio.h>
#define SIZE 5

struct _depto
{
    int qtd;
    float soma;
};

typedef struct _depto depto;

void salarioMedio(depto a[])
{
    float media;
    
    for(int i = 0; i < SIZE; i++)
    {
        media = a[i].soma / a[i].qtd;
        
        printf("\nO salário médio do departamento %d é R$%.2f", i + 1, media);
    }
}

int main()
{
    depto codigo[SIZE];
    
    for(int i = 0; i < SIZE; i++)
    {
        printf("Coloque a quantidade de funcionários do departamento %d: ", i + 1);
        scanf("%d", &codigo[i].qtd);
        
        printf("Coloque a soma dos salários dos funcionários: ");
        scanf("%f", &codigo[i].soma);
    }
    
    salarioMedio(codigo);
    
    return 0;
    
}

/* 6 */

#include <stdio.h>
#define SIZE 10

int imaior(float a[], int qt)
{
    int m = 0;
    
    for(int i = 1; i < qt; i++)
    {
        if(a[i] > a[m])
        {
            m = i;
        }
    }
    
    return m;
}

int procura(float a[], float b, int qt)
{
    int inicio = 0, fim = qt - 1, meio;
    
    while(inicio <= fim)
    {
        meio = (inicio + fim) / 2;
        
        if(a[meio] == b)
        {
            return meio;
        }
        else if(a[meio] > b)
        {
            fim = meio - 1;
        }
        else
        {
            inicio = meio + 1;
        }
    }
    
    return -1;
}

void ordena(float a[], int qt)
{
    for(int i = qt; i > 1; i--)
    {
        int im = imaior(a, i);
        
        if(im != i - 1)
        {
            int aux = a[i - 1];
            
            a[i - 1] = a[im];
            
            a[im] = aux;
        }
    }
}

int main()
{
    int posicao;
    
    float vetor[SIZE] = {0}, valor;
    {
        for(int i = 0; i < SIZE; i++)
        {
            printf("Coloque o valor de vetor[%d]: ", i + 1);
            scanf("%f", &vetor[i]);
        }
        
        ordena(vetor, SIZE);
        
        printf("Coloque o valor procurado: ");
        scanf("%f", &valor);
        
        posicao = procura(vetor, valor, SIZE);
        
        if(posicao != -1)
        {
            printf("\nValor achado na posição %d", posicao + 1);
        }
        else
        {
            printf("\nValor não achado");
        }
    }
    
    return 0;
}
