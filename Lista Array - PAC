/* 1 */

#include <stdio.h>

int main()
{
    int dia;
    
    float a[31] = {0}, valor, total = 0;
    
    do
    {
        printf("Coloque o dia:");
        scanf("%d", &dia);
        
        if (dia != 0)
        {
            printf("Coloque o valor:");
            scanf("%f", &valor);
            
            a[dia - 1] += valor;
            
            total += valor;
        }

    }while(dia != 0);
    
    for(int i = 0; i < 31; i++)
    {
        if(a[i] != 0)
        {
            printf("O valor total do dia %d é %.2f\n", i + 1, a[i]);
        }
    }
    
    printf("O total do mês é %.2f", total);
    
    return 0;
}

/* 2 */

#include <stdio.h>

int main()
{
    int dia, contd[31] = {0}, contm = 0;
    
    float a[31] = {0}, valor, totalm = 0, mediad, mediam;
    
    do
    {
        printf("Coloque o dia:");
        scanf("%d", &dia);
        
        if (dia != 0)
        {
            printf("Coloque o valor:");
            scanf("%f", &valor);
            
            a[dia - 1] += valor;
            
            contd[dia - 1] += 1;
            
            totalm += valor;
            
            contm += 1;
        }

    }while(dia != 0);
    
    for(int i = 0; i < 31; i++)
    {
        if(a[i] != 0)
        {
            mediad = a[i] / contd[i];
            
            printf("O valor total do dia %d é %.2f\n", i + 1, a[i]);
            
            printf("A media do dia %d é %.2f\n", i + 1, mediad);
        }
    }
    
    mediam = totalm / contm;
    
    printf("O total do mês é %.2f\n", totalm);
    
    printf("A media total do mês é %.2f\n", mediam);
    
    return 0;
}

/* 3 */

#include <stdio.h>

int main()
{
    float produto[10], vtotal, total;
    
    int codigo, i, quantidade[10];
    
    for(i = 0; i < 10; i++)
    {
        printf("Coloque o valor do produto de código %d: ", i + 1);
        scanf("%f", &produto[i]);
    }
    
    printf("Coloque o código do produto: ");
    scanf("%d", &codigo);
    
    while (codigo != 0 && codigo <= 10)
    {
        printf("Coloque a quantidade de produtos vendidos: ");
        scanf("%d", &quantidade[codigo - 1]);
        
        printf("Coloque o código do produto: ");
        scanf("%d", &codigo);
    }
    
    for(i = 0; i < 10; i++)
    {
        printf("A quantidade total do produto %d é %d\n", i + 1, quantidade[i]);
        
        vtotal = produto[i] * quantidade[i];
        
        printf("O valor total do produto %d é %.2f\n", i + 1, vtotal);
        
        total += vtotal;
    }
    
    printf("O total geral de vendas é %.2f\n", total);
}

/* 4 */

#include <stdio.h>

void busca(int a[], int b, int c, int d) /* a - matrícula, b - qtci, c - qtle, d - qt */
{
    int matr, inicio = 0, ci, le, r, mi; 
    
    printf("Coloque a matrícula buscada: ");
    scanf("%d", &matr);
    
    while(matr != 0)
    {
        for(int i = 0; i < b; i++)
        {
            if(a[i] == matr)
            {
                printf("Convocação Imediata\n");
                
                ci++;
            }
        }
        
        for(int i = b; i < c; i++)
        {
            if(a[i] == matr)
            {
                printf("Em lista de espera\n");
                
                le++;
            }
        }
        
        for(int i = c; i < d; i++)
        {
            if(a[i] == matr)
            {
                printf("Reprovado\n");
                
                r++;
            }
        }
        
        for(int i = 0; i < d; i++)
        {
            if(a[i] == matr)
            {
                printf("Matrícula Inexistente\n");
                
                mi++;
            }
        }
        
        printf("Coloque a matrícula buscada: ");
        scanf("%d", &matr);
    }
}

int main()
{
    int matricula[] = {0}, i = 0, qtci, qtle, qt = 0;
    
    printf("Coloque a matrícula: ");
    scanf("%d", &matricula[i]);
    
    if(matricula[i] != 0)
    {
        while(matricula[i] != 0)
        {
            i++;
            
            qt++;
            
            printf("Coloque a matrícula: ");
            scanf("%d", &matricula[i]);
        }
        
        printf("Diga o número de candidatos convocados: ");
        scanf("%d", &qtci);
        
        printf("Diga o número de candidatos da lista de espera: ");
        scanf("%d", &qtle);

        qtle += qtci;
        
        busca(matricula, qtci, qtle, qt);
    }
    
    return 0;
}
