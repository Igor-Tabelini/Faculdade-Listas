/* 1 */

#include <stdio.h>

int main()
{
    int dia;
    
    float a[31] = {0}, valor, total = 0;
    
    do
    {
        printf("Coloque o dia:");
        scanf("%d", &dia);
        
        if (dia != 0)
        {
            printf("Coloque o valor:");
            scanf("%f", &valor);
            
            a[dia - 1] += valor;
            
            total += valor;
        }

    }while(dia != 0);
    
    for(int i = 0; i < 31; i++)
    {
        if(a[i] != 0)
        {
            printf("O valor total do dia %d é %.2f\n", i + 1, a[i]);
        }
    }
    
    printf("O total do mês é %.2f", total);
    
    return 0;
}

/* 2 */

#include <stdio.h>

int main()
{
    int dia, contd[31] = {0}, contm = 0;
    
    float a[31] = {0}, valor, totalm = 0, mediad, mediam;
    
    do
    {
        printf("Coloque o dia:");
        scanf("%d", &dia);
        
        if (dia != 0)
        {
            printf("Coloque o valor:");
            scanf("%f", &valor);
            
            a[dia - 1] += valor;
            
            contd[dia - 1] += 1;
            
            totalm += valor;
            
            contm += 1;
        }

    }while(dia != 0);
    
    for(int i = 0; i < 31; i++)
    {
        if(a[i] != 0)
        {
            mediad = a[i] / contd[i];
            
            printf("O valor total do dia %d é %.2f\n", i + 1, a[i]);
            
            printf("A media do dia %d é %.2f\n", i + 1, mediad);
        }
    }
    
    mediam = totalm / contm;
    
    printf("O total do mês é %.2f\n", totalm);
    
    printf("A media total do mês é %.2f\n", mediam);
    
    return 0;
}

/* 3 */

/* 4 */

#include <stdio.h>

int busca(int a[], int b, int c, int d) /* a - array de matricula, b - qtci, c - qtle, d - qt*/
{
    int matricula;
    
    printf("Coloque a matrícula procurada: ");
    scanf("%d", &matricula);
    
    if(matricula != 0)
    {
        for(int i = 0; i < b; i++)
        {
            if(a[i] == matricula)
            {
                printf("Convocação Imediata\n");
            
                return 1;
            }   
        }
        
        for(int i = b; i < c; i++)
        {
            if(a[i] == matricula)
            {   
                printf("Em Lista de Espera\n");
            
                return 1;
            }
        }
    
        for(int i = c; i < d; i++)
        {
            if(a[i] == matricula)
            {
                printf("Reprovado\n");
            
                return 1;
            }
        }
        
        for(int i = 0; i < d; i++)
        {
            if(a[i] == matricula)
            {
                printf("Matrícula Inexistente\n");
                
                return 1;
            }
        }
    }
    
    return 0;
}

int main()
{
    int matricula[] = {0}, i = 0, qtci, qtle, resp = 1, qt = 0;
    
    printf("Coloque as matrículas: ");
    scanf("%d", &matricula[i]);
    
    while(matricula[i] != 0)
    {
        if(matricula[i] != 0)
        {
            qt++;
        }
        
        i++;
        
        printf("Coloque as matrículas: ");
        scanf("%d", &matricula[i]);
    }
    
    printf("Coloque a quantidade de candidatos convocados: ");
    scanf("%d", &qtci);
    
    printf("Coloque a quantidade de candidatos da lista de espera: ");
    scanf("%d", &qtle);
    
    qtle += qtci;
    
    while (resp != 0)
    {
        resp = busca(matricula[i], qtci, qtle, qt);
    }
    
    return 0;
}
