/* 1 */

#include <stdio.h>
#define SIZE 200

void inicializa(int a[], int* qt)
{
    int i = 0;
    
    printf("Coloque a nota do aluno: ");
    scanf("%d", &a[i]);
     
    while(a[i] != -1)
    {
        i++;
        
        (*qt)++;
        
        printf("Coloque a nota do aluno: ");
        scanf("%d", &a[i]);
    }
}

void exibe(int a[], int* qt)
{
    int nota0 = 0, nota1 = 0, nota2 = 0, nota3 = 0, nota4 = 0, nota5 = 0, nota6 = 0, nota7 = 0, nota8 = 0, nota9 = 0, nota10 = 0;
    
    for(int i = 0; i < (*qt); i++)
    {
        if(a[i] == 0)
        {
            nota0++;
        }
        
        if(a[i] == 1)
        {
            nota1++;
        }
        
        if(a[i] == 2)
        {
            nota2++;
        }
        
        if(a[i] == 3)
        {
            nota3++;
        }
        
        if(a[i] == 4)
        {
            nota4++;
        }
        
        if(a[i] == 5)
        {
            nota5++;
        }
        
        if(a[i] == 6)
        {
            nota6++;
        }
        
        if(a[i] == 7)
        {
            nota7++;
        }
        
        if(a[i] == 8)
        {
            nota8++;
        }
        
        if(a[i] == 9)
        {
            nota9++;
        }
        
        if(a[i] == 10)
        {
            nota10++;
        }
    }
    
    printf("\nNota 0: %d\nNota 1: %d\nNota 2: %d\nNota 3: %d\nNota 4: %d\nNota 5: %d\nNota 6: %d\nNota 7: %d\nNota 8: %d\nNota 9: %d\nNota 10: %d", nota0, nota1, nota2, nota3, nota4, nota5, nota6, nota7, nota8, nota9, nota10);
}

int main()
{
    int nota[SIZE] = {0}, qt = 0;
    
    inicializa(nota, &qt);
    
    exibe(nota, &qt);
    
    return 0;
}

