/* Desafio */

A diferença entre bubblesort, quicksort e insertionsort:

Bubblesort: O elemento de maior valor é empurrado para a última posição do vetor

for(int i = 0; i < n - 1; i++)
{
    for(int j = i + 1; j < n; j++)
    {
        if(a[i] > a[j])
        {
            a[j] = aux;
            a[j] = a[i];
            a[i] = a[j];
        }
    }
}

Selectionsort: Primeiro procura o elemento de menor valor e depois o coloca na primeira posição do vetor

for(int i = 0; i < n - 1; i++)
{
    menor = i;
    
    for(int j = i + 1; j < n; j++)
    {
        if(a[menor] > a[j])
        {
            menor = j;
        }
        
        aux = a[i];
        a[i] = a[menor];
        a[menor] = aux;
    }
}

Insertionsort: O elementor de menor valor é empurrado para a primeira posição 

for (int i = 1; i <= n - 1; i++)
{
    aux = a[i];
    int j = i - 1;
    
    while (j >= 0 && aux < a[j]) 
    {
        a[j+1] = a[j];
        j--;
    }
    
    a[j+1] = aux;
}

/* Questão 1 */

#include <stdio.h>
#define size 5

void bubblesort(int a[], int qt)
{
    int aux;

    for(int i = 0; i < qt - 1; i++)
    {
        for(int j = i + 1; j < qt; j++)
        {
            if(a[i] < a[j])
            {
                a[j] = aux;
                a[j] = a[i];
                a[i] = a[j];
            }   
        }
    }
}

void selectionsort(int a[], int qt)
{
    int aux, menor;

    for(int i = 0; i < qt - 1; i++)
    {
        menor = i;

        for(int j = i + 1; j < qt; j++)
        {
            if(a[menor] > a[j])
            {
                menor = j;
            }

            aux = a[i];
            a[i] = a[menor];
            a[menor] = aux;
        }
    }
}

void insertionsort(int a[], int qt)
{
    int aux;

    for (int i = 1; i <= qt - 1; i++)
    {
        aux = a[i];
        int j = i - 1;

        while (j >= 0 && aux < a[j]) 
        {
            a[j+1] = a[j];
            j--;
        }

        a[j+1] = aux;
    }
}

int main(void)
{
    int a[size], indice;

    for(int i = 0; i < size; i++)
    {
        printf("\nColoque o valor: ");
        scanf("%d", &a[i]);
    }

    printf("\nEscolha o modo de ordenação e digite o número respectivo a tipo\nBubblesort - 0\nSelectionsort - 1\nInsertionsort - 2\n\n");
    scanf("%d", &indice);

    if(indice == 0)
    {
        bubblesort(a, size);
    }
    else if(indice == 1)
    {
        selectionsort(a, size);
    }
    else
    {
        insertionsort(a, size);
    }

    for(int i = 0; i < size; i++)
    {
        printf("\n%d", a[i]);
    }

    return 0;
}

/* Questão 2 */

#include <stdio.h>
#define size 15

struct _funcionario
{
    float salario;
    int matricula;
};

typedef struct _funcionario funcionario;
    
int main(void)
{
    float media, soma = 0;
    funcionario a[size], aux;
    int contador = 0;
    
    for(int i = 0; i < size; i++)
    {
        printf("\nColoque a matricula do funcionario %d: ", i + 1);
        scanf("%d", &a[i].matricula);
        
        printf("\nColoque o salario do funcionario %d: ", i + 1);
        scanf("%f", &a[i].salario);
    }
    
    for(int i = 0; i < size - 1; i++)
    {
        for(int j = i + 1; j < size; j++)
        {
            if(a[i].salario > a[j].salario)
            {
                aux = a[j];
                a[j] = a[i];
                a[i] = aux;
            }
        }
    }
    
    for(int i = 0; i < size; i++)
    {
        printf("\nO salario do funcionario %d = %.2f", a[i].matricula, a[i].salario);
        
        soma += a[i].salario;
    }
    
    media = soma / size;
    
    for(int i = 0; i < size; i++)
    {
        if(a[i].salario < media)
        {
            contador += 1;
        }
    }
    
    printf("\nA quantidade de funcionarios que recebem salario menor que a media e %d", contador);
    
    return 0;
}
